@model tl2_tp8_2025_ElAguhs.Models.Presupuesto

@{
    ViewData["Title"] = "Detalle del Presupuesto";
}

<h1>Detalle del Presupuesto</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <h3>Información General</h3>
        <dl class="row">
            <dt class="col-sm-4">ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPresupuesto)</dd>
            
            <dt class="col-sm-4">Destinatario:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreDestinatario)</dd>

            <dt class="col-sm-4">Fecha de Creación:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>
            
        </dl>
    </div>
</div>

<hr />

<h3>Productos Incluidos</h3>
<p>
    <a asp-action="AgregarProducto" asp-route-idPresupuesto="@Model.IdPresupuesto" class="btn btn-sm btn-success">
        <i class="bi bi-plus-circle"></i> Agregar Producto
    </a>
</p>

@if (Model.Detalle != null && Model.Detalle.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
     <tbody>
            @foreach (var detalle in Model.Detalle!) 
            {
                var producto = detalle.Producto!; 
                
                <tr>
                    <td>@Html.DisplayFor(item => producto.Descripcion)</td> 
                    <td>@Html.DisplayFor(item => detalle.Cantidad)</td>
                    <td>@String.Format("{0:C}", producto.Precio)</td>
                    <td>@String.Format("{0:C}", producto.Precio * detalle.Cantidad)</td>
                    <td>
                        <a asp-action="QuitarProducto" asp-route-idPresupuesto="@Model.IdPresupuesto" asp-route-idProducto="@producto.IdProducto" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de quitar este producto?');">
                            Quitar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Monto Total (sin IVA):</strong></td>
                <td colspan="2"><strong>@String.Format("{0:C}", Model.MontoPresupuesto())</strong></td>
            </tr>
            <tr>
                <td colspan="3" class="text-end"><strong>Monto Total (con IVA 21%):</strong></td>
                <td colspan="2"><strong>@String.Format("{0:C}", Model.MontoPresupuestoConIva())</strong></td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="alert alert-warning">
        Este presupuesto no tiene productos cargados.
    </div>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a> |
    <a asp-action="Edit" asp-route-id="@Model.IdPresupuesto" class="btn btn-primary">Editar Encabezado</a> |
    <a asp-action="Delete" asp-route-id="@Model.IdPresupuesto" class="btn btn-danger">Eliminar Presupuesto</a>
</div>